<UserControl x:Class="MusicBox.Modules.SheetEditor.Views.SegmentEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicBox.Modules.SheetEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding BarEditorVms}" SelectedItem="{Binding SelectedBarEditorVm}" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Segment Name:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding SegmentName}" Width="180" Height="20"/>
            <Button Content="Add Bar" Command="{Binding AddBarCommand}" Margin="10"/>
            <Button Content="Delete Bar" Command="{Binding DeleteBarCommand}" Margin="10"/>
        </StackPanel>
            
    </Grid>
</UserControl>
